
.col-md-12.text-center
    h2 = Restaurant.find(@restaurant_id).name
table.table
    thead
        tr
            th Order number
            th Address
            th Total Bill
    - @orders.each do |order|
        tbody
            tr
                -if order.present && order.order_restaurants.where(restaurant_id: @restaurant_id).first.id?
                    td = link_to "#{order.id}", restaurant_interface_order_path(order)
                    td = "#{Order.find(order).user.address}"
                    td = "#{order.order_items.where(restaurant_id: @restaurant_id).map{ |x| x.total}.sum}"
