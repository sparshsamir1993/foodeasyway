

- @items.each do |t|
	tr

		td width="33%"

			= t.name

		td width="33%"

			= t.price

		td width="33%"

			form#products_index_add_to_cart_form action='/order_items' method='POST' autocomplete="off"
				input type="hidden" name="authenticity_token" value="#{form_authenticity_token}"
				input type="hidden" name="item_id" value="#{t.id}"
				input type="hidden" name="restaurant_id" value="#{@restaurant.id}"
				input type="hidden" name="user_id" value="#{current_user.id}"
				input type="hidden" name="total" value="#{t.price * params[:quantity].to_i}"
				-if session[:order_id].present?
					input type="integer" name="quantity" value="#{Order.find(session[:order_id]).order_items.find_by_item_id(t.id).quantity}" style="width: 100%"
				-else
					input type="integer" name="quantity"  style="width: 100%"
				input#products_index_add_to_cart.btn.btn-danger.btn-outline.btn-block type="submit" data-product="#{t.id}" value="Add to Order"
